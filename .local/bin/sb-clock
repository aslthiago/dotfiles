#!/bin/sh

hour=$(date '+%I')

case "$hour" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

LC_TIME=pt_BR.UTF-8 date "+%b %d (%a) $icon %H:%M"
